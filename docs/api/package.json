{
  "name": "server",
  "version": "1.0.0",
  "description": "the server application for seamless",
  "license": "MIT",
  "contributors": [
    "Leon Pearce <leonp1991@gmail.com>"
  ],
  "scripts": {
    "start": "node ./tools/start",
    "test": "node ./tools/test",
    "test:once": "node ./tools/test/once",
    "test:ci": "node ./tools/test/ci",
    "lint": "node ./tools/lint",
    "lint:fix": "node ./tools/lint/fix",
    "doc": "node ./tools/doc",
    "doc:once": "node ./tools/doc/once",
    "build": "node ./tools/build",
    "open": "node ./tools/open",
    "open:test": "node ./tools/open/test",
    "open:api": "node ./tools/open/api",
    "deploy": "node ./tools/deploy"
  },
  "nyc": {
    "report-dir": "./docs/test",
    "extension": [
      ".js"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "lines": 80
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-preset-node6": "^11.0.0",
    "esdoc": "^0.4.8",
    "esdoc-es7-plugin": "0.0.3",
    "eslint": "^3.6.1",
    "nyc": "^8.3.0",
    "supertest": "^2.0.0",
    "watch": "^0.19.2"
  },
  "dependencies": {
    "bcrypt": "^0.8.7",
    "jsonwebtoken": "^7.1.9",
    "koa": "^2.0.0-alpha.7",
    "koa-bodyparser": "^3.2.0",
    "koa-logger": "^1.3.0",
    "koa-router": "^7.0.1",
    "mongoose": "^4.6.1"
  }
}
