{
  "name": "server",
  "version": "1.0.0",
  "description": "the server application for seamless",
  "license": "MIT",
  "main": "build/main.js",
  "contributors": [
    "Leon Pearce <leonp1991@gmail.com>"
  ],
  "scripts": {
    "start": "babel-node tools/dev",
    "test": "watch 'npm run mocha:coverage' source",
    "docs": "watch 'npm run document' source",
    "deploy": "babel-node tools/deploy",
    "build": "babel-node tools/build ",
    "mocha": "babel-node tools/test",
    "mocha:coverage": "babel-node tools/test/coverage",
    "document": "babel-node tools/docs",
    "open:coverage": "npm run mocha:coverage && open docs/coverage/index.html",
    "open:api": "npm run document && open docs/api/index.html"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "rules": {
      "no-console": 0,
      "no-unsafe-negation": 0,
      "generator-star-spacing": 0
    }
  },
  "nyc": {
    "report-dir": "./docs/coverage",
    "extension": [".js", ".jsx"],
    "reporter": ["text", "html"],
    "exclude": "source/**/spec.js*",
    "include": "source/**/*.js*",
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "lines": 80
  },
  "devDependencies": {
    "babel-cli": "*",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "*",
    "babel-preset-stage-0": "*",
    "chai": "*",
    "chokidar": "^1.6.0",
    "copy": "^0.3.0",
    "esdoc": "^0.4.8",
    "esdoc-es7-plugin": "0.0.3",
    "eslint": "^3.3.0",
    "eslint-config-airbnb-base": "^5.0.2",
    "eslint-plugin-import": "^1.13.0",
    "mocha": "*",
    "nyc": "^8.1.0",
    "supertest": "^2.0.0",
    "supertest-as-promised": "^4.0.0",
    "watch": "*"
  },
  "dependencies": {
    "babel-polyfill": "*",
    "koa": "^2.0.0-alpha.5",
    "koa-bodyparser": "^2.2.0",
    "koa-logger": "^1.3.0",
    "koa-router": "^7.0.1",
    "mongoose": "^4.5.8"
  },
  "engine": "node 6.4.0"
}
